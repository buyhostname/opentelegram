extends layout

block content
  div(class="min-h-screen flex flex-col items-center justify-center p-4")
    div(class="max-w-md w-full bg-gray-800 rounded-lg shadow-xl p-8")
      h1(class="text-3xl font-bold text-center mb-6") OpenTelegram
      
      p(class="text-gray-300 text-center mb-8")
        | Connect with OpenCode AI assistant through Telegram
      
      div(class="space-y-4")
        if botUsername
          a(href=`https://t.me/${botUsername}` target="_blank" class="block w-full bg-blue-500 text-white text-center py-3 px-4 rounded-lg font-semibold transition-all duration-200")
            | Open in Telegram
            span(class="ml-2") →
        else
          p(class="text-yellow-400 text-center")
            | Bot not configured
      
      div(class="mt-8 pt-6 border-t border-gray-700")
        h2(class="text-lg font-semibold mb-4") Features
        ul(class="space-y-2 text-gray-300")
          li(class="flex items-center")
            span(class="text-green-400 mr-2") ✓
            | Chat with OpenCode AI
          li(class="flex items-center")
            span(class="text-green-400 mr-2") ✓
            | Manage sessions
          li(class="flex items-center")
            span(class="text-green-400 mr-2") ✓
            | Get coding help instantly
      
      div(class="mt-8 text-center text-gray-500 text-sm")
        p Powered by OpenCode SDK
