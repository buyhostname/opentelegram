# Express server port (for web interface)
PORT=3002
PRODUCTION=true

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_GROUP_ID=your_group_id

# User Whitelist (comma-separated Telegram user IDs)
# Only users in this list can use the bot. Leave empty to allow everyone.
# To get your user ID, message the bot and it will tell you.
# Example: TELEGRAM_ALLOWED_USERS=123456789,987654321
TELEGRAM_ALLOWED_USERS=

# OpenCode Server (used by both server.js and client.js)
OPENCODE_HOST=127.0.0.1
OPENCODE_PORT=4097
OPENCODE_MODEL=opencode/minimax-m2.5-free

# Session
SESSION_SECRET=change_this_to_a_secure_secret

# OpenAI Whisper API Key (for voice input)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
